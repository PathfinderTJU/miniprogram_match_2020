page{
}

.outside_block{
  height: 100%;
  margin: 60rpx;
}

.info_block{
  display: flex;
  align-items: center;
}

.avatar_block{
  width: 180rpx;
  height: 180rpx;
  border-radius: 90rpx;
}

.nickName_block{
  margin-left: 3a0rpx;
  font-size: 50rpx;
  background-color: white;
  padding: 0;
}

.choose_block{
  margin-top: 50rpx;
  display: flex;
  flex-wrap: wrap;
  font-family: "puhui-bold";
}

.choose_block > view{
  width: 100%;
  display: flex;
  justify-content: space-between;
  height: 100%;
  background-color: white;
  margin-top: 50rpx;
  font-size: 50rpx;
  padding: 50rpx;
  border-radius: 50rpx;
  align-items: center;
  box-shadow: 0px 0px 10px rgb(218, 216, 216);
}

.number{
  font-size: 40rpx;
  font-family: "puhui-light"
}