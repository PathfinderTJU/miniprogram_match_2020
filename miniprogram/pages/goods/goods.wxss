/* miniprogram/pages/goods/goods.wxss */
.outside_block{
  height: 100%;
  padding: 60rpx;
  transition: .4s;
}

.title_block{
  width: 100%;
  font-family: "puhui-bold";
  font-size: 28px;
  letter-spacing: -50;
}

.type_block{
  width: 100%;
  margin-top: 50rpx;
  display: flex;
  justify-content: space-between;
}

.type{
  width: 32%;
  height: 60rpx;
  text-align: center;
  vertical-align: middle;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 30rpx;
  color: gray;
  font-family: "puhui-regular";
}

.select{
  color: white;
  background-color: #E36637;
}

.goods_block{
  width: 100%;
  margin-top: 50rpx;
}

.good_view{
  width: 100%;
  height: 205rpx;
  display: flex;
  justify-content: space-between;
  align-content: center;
  align-items: center;
}

.good_image{
  width: 180rpx;
  height: 180rpx;
  border-radius: 40rpx;
}

.good_info{
  height: 100%;
  width: 300rpx;
  display: flex;
  flex-wrap: wrap;
  overflow: hidden;
  align-items: center;
  align-content: center;
}

.good_name{
  width: 100%;
  font-size: 30rpx;
  margin-bottom: 15rpx;
}

.good_describtion{
  width: 100%;
  height: 50rpx;
  line-height: 25rpx;
  font-size: 20rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  margin-top: 15rpx;
}

.good_status{
  text-align: center;
  font-family: "puhui-bold";
  color: gray;
}

.lost{
  color: #E36637;
}

.time{
  text-align: center;
  font-size: 20rpx;
  font-family: "puhui-medium"
}

.add_button{
  position: fixed;
  bottom: 100rpx;
  right: 100rpx;
  background-color: #E36637;
  width: 100rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  border-radius: 50rpx;
  box-shadow: 0 0 10px rgb(173, 173, 173);
  z-index: 200;
}

.icon-add{
  font-size: 50rpx;
}

.none_block{
  margin-top: 200rpx;
  text-align: center;
  font-family: "puhui-regular";
  color: gray;
}
